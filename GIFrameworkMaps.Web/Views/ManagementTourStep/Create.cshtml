@model GIFrameworkMaps.Data.Models.Tour.TourStep
@{
    ViewData["Title"] = $"Create new tour step";
}

<h1>@ViewData["Title"]</h1>

<a asp-action="Edit" asp-controller="ManagementTour" asp-route-id="@Model.TourDetailId" class="btn btn-link">Cancel</a>

<form asp-action="Create">
    <div class="row mt-4">
        <div class="col-md-6">

            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>
            <input type="hidden" asp-for="TourDetailId" class="form-control" />

            <div class="mb-3">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <div class="form-text">This text will appear in bold at the top of your tour step</div>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

             <div class="mb-3">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control" rows="5"></textarea>
                <div class="form-text">Please include HTML markup for any links</div>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="AttachToSelector" class="control-label"></label>
                <input asp-for="AttachToSelector" class="form-control" />
                <div class="form-text">For example .sidebar-button-share</div>
                <span asp-validation-for="AttachToSelector" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="AttachToPosition" class="control-label"></label>
                <select asp-for="AttachToPosition" class="form-select">
                    <option value="">None</option>
                    <option value="top">Top</option>
                    <option value="bottom">Bottom</option>
                    <option value="left">Left</option>
                    <option value="right">Right</option>
                </select>
                <span asp-validation-for="AttachToPosition" class="text-danger"></span>
            </div>

             <div class="mb-3">
                <label asp-for="StepNumber" class="control-label"></label>
                <input asp-for="StepNumber" class="form-control" />
                <span asp-validation-for="StepNumber" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check">
                <input name="AddAnother" id="AddAnother" value="true" type="checkbox" class="form-check-input" />
                <label for="AddAnother" class="form-check-label">Add another step on save</label>
            </div>
            <div class="mb-3">
                <input type="submit" value="Create" class="btn btn-lg btn-primary" />
                <a asp-action="Edit" asp-controller="ManagementTour" asp-route-id="@Model.TourDetailId" class="btn btn-link">Cancel</a>
            </div>

        </div>

    </div>
</form>


            


