@model List<GIFrameworkMaps.Data.Models.WelcomeMessage>
@{
    ViewData["Title"] = "Welcome Messages";

    // Working out the base edit URL once is significantly faster than doing it for each row
    var editUrl = Url.Action("Edit");
}

<partial name="ManagementPartials/BackToManagementHome" />

<h1>@ViewData["Title"]</h1>
<p class="lead">Create, edit and delete welcome messages</p>

<a href="@Url.Action("Create")" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Add new welcome message</a>

@if (Model != null)
{
    <table class="table table-bordered table-striped mt-2">
        <thead>
            <tr>
                <th>ID</th><th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (GIFrameworkMaps.Data.Models.WelcomeMessage welcomeMessage in Model.OrderBy(a => a.Id))
            {
                <tr>
                    <td>@welcomeMessage.Id</td>
                    <td><a href="@editUrl/@welcomeMessage.Id">@welcomeMessage.Name</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">No welcome messages have been created yet</div>
}

            


