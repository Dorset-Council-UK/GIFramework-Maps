@model GIFrameworkMaps.Data.Models.WelcomeMessage
@{
    ViewData["Title"] = $"Create new welcome message";
}

<h1>@ViewData["Title"]</h1>

<div class="row mt-2">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>
            <div class="mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <div class="form-text">This text will appear in bold at the top of your welcome message</div>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control" rows="5"></textarea>
                <div class="form-text">Please include any HTML markup for paragraps, headers and links</div>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Frequency" class="control-label"></label>
                <select asp-for="Frequency" class="form-select">
                    <option value="-1">Just once</option>
                    <option value="0">Always</option>
                    <option value="1">Once a day</option>
                    <option value="7">Once a week</option>
                    <option value="14">Once every fortnight</option>
                    <option value="30">Once a month</option>
                    <option value="182">Once every six months</option>
                    <option value="365">Once a year</option>
                </select>
                <span asp-validation-for="Frequency" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ModalSize" class="control-label"></label>
                <select asp-for="ModalSize" class="form-select">
                    <option value="modal-lg">Pop-up window</option>
                    <option value="modal-fullscreen">Full screen</option>
                </select>
                <span asp-validation-for="ModalSize" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="UpdateDate" class="control-label"></label>
                <input asp-for="UpdateDate" type="datetime-local" class="form-control" />
                <div class="form-text">A date when this message has been updated enough to re-show it to the user.</div>
                <span asp-validation-for="UpdateDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input asp-for="DismissOnButtonOnly" class="form-check-input" type="checkbox" />
                <label asp-for="DismissOnButtonOnly" class="control-label"> Dismiss using button only?</label>
                <div class="form-text">Tick this box if you want users to only be able to dismiss your message by using the dismiss button</div>
                <span asp-validation-for="DismissOnButtonOnly" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DismissText" class="control-label"></label>
                <input asp-for="DismissText" class="form-control" />
                <div class="form-text">The text you want on your button. Leave this blank to use the default of 'Close'</div>
                <span asp-validation-for="DismissText" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Cancel</a>
</div>


            


