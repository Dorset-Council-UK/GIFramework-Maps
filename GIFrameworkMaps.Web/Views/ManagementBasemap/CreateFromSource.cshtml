@using GIFrameworkMaps.Data.ViewModels.Management
@using System.Text.Json
@model BasemapEditViewModel;
@{
    ViewData["Title"] = $"Create new basemap";
}

<h1>@ViewData["Title"]</h1>

<div>
    <a href="https://dorset-council-uk.github.io/GIFramework-Maps-Admin-Guide/gui/basemaps/" class="btn btn-outline-primary" target="_blank"
       role="button">Stuck? Read the help documentation</a>
</div>

<form asp-action="CreateFromSource">
    <div class="row mt-2">
    
        <div class="col-md-8 col-lg-6">
        
            <input type="hidden" asp-for="Basemap.LayerSourceId"/>
            <partial name="ManagementPartials/EditBasemapPartial" model="Model" />

            <div class="mb-3">
                <input type="submit" value="Create" class="btn btn-primary btn-lg" />
                <a asp-action="List" class="btn btn-link">Cancel</a>
            </div>

        </div>

        <div class="col-md-4 col-lg-6">
            <h3>Source details</h3>
            <table class="table table-sm table-striped">
                <tbody>
                    <tr><th>ID</th><td>@Model.Basemap.LayerSource.Id</td></tr>
                    <tr><th>Name</th><td>@Model.Basemap.LayerSource.Name</td></tr>
                    <tr><th>Description</th><td>@Model.Basemap.LayerSource.Description</td></tr>
                </tbody>
            </table>
            <a class="btn btn-outline-secondary btn-sm" href="@Url.Action("Edit","ManagementLayerSource",new {id=Model.Basemap.LayerSource.Id})" target="_blank">View source details <i class="bi bi-box-arrow-up-right"></i></a>
        </div>
    
    </div>
</form>
