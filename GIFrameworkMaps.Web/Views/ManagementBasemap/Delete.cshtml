@model GIFrameworkMaps.Data.Models.Basemap
@{
    ViewData["Title"] = $"Delete basemap '{Model.Name}'";
}

<h1>@ViewData["Title"]</h1>
<div class="row mt-2">
    <h2>Are you sure you want to delete this basemap?</h2>
    <p class="lead">This action cannot be undone.</p>
    
    <div class="alert alert-warning">You should check that there are no versions that use this basemap as the default or only have this basemap, as this can cause unexpected results.</div>

    <form asp-action="Delete">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
    </form>

</div>

<div>
    <a asp-action="List">Cancel</a>
</div>

            


