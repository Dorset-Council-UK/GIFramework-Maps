@using GIFrameworkMaps.Data.ViewModels.Management
@model UserEditViewModel

@foreach (var item in Model.AvailableVersions)
{
    string id = "SelectedVersions__" + item.Value;
    var (name, slug) = Model.SplitNameAndSlug(item);
    <div class="form-check">
        <input type="checkbox" class="form-check-input" name="SelectedVersions" value="@item.Value" id="@id" @(item.Selected ? "checked=checked" : "") />
        <label class="form-check-label" for="@id">@name <span class="text-muted fst-italic">/@slug</span></label>
    </div>
}