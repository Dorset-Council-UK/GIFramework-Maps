@using Microsoft.Extensions.Configuration;
@inject IConfiguration configuration;
@model List<GIFrameworkMaps.Data.Models.Version>
@{
    string appName = configuration.GetValue<string>("GIFrameworkMaps:appName");
    ViewData["Title"] = "Versions";
}
<h1>@ViewData["Title"]</h1>
<p class="lead">Find a @appName version</p>

<div class="container">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (GIFrameworkMaps.Data.Models.Version version in Model.
            Where(a => a.Enabled == true).
            Where(a => a.RequireLogin == false).
            OrderBy(a => a.Name))
        {
        <div class="col">
            <div class="card text-bg-dark h-100">
                    <img src="https://cdn.pixabay.com/photo/2017/02/15/11/05/texture-2068283_1280.jpg" class="card-img" height="150" alt="Map preview" />
                <div class="card-img-overlay">
                    <a asp-action="Index" asp-controller="Version" class="stretched-link">
                        <h4 class="card-title"> @version.Name</h4>
                        <p class="card-text"><p class="card-text">@version.Description</p>
                    </a>
                </div>
            </div>
        </div>
        }
    </div>       
</div>

