<div class="modal" tabindex="-1" id="add-bookmark-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add bookmark</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="AddBookmark" asp-controller="API">
                <div class="modal-body">
                    <p>Give your bookmark a name</p>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" id="gifw-new-bookmark-name">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save bookmark</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>